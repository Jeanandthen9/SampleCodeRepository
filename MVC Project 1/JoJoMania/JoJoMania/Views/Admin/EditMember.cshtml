@model JoJoMania.Models.MemberVM
@{
    ViewBag.Title = "EditMember";
}

<div class="row">
    <h2>Edit Member</h2>
    <p></p>
    @Html.ActionLink("Return to Member List", "MembersList", "Admin", null, new { @class = "btn btn-primary btn-sm" })
<p></p>
</div>

<div class="row">
    @using (Html.BeginForm("EditMember", "Admin", null, FormMethod.Post, new {id = "memberForm"}))
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(j => j.Member.UserID)
        <div class="col-xs-12 col-sm-7">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="panel-title">Member Details</h4>
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <p>@Html.ValidationMessageFor(m => m.Member.UserName)</p>
                        <label>UserName:</label>
                        @Html.TextBoxFor(m => m.Member.UserName, new {@class = "form-control", placeholder = "MembersList"})
                    </div>

                    <div class="form-group">
                        <p>@Html.ValidationMessageFor(m => m.Member.Age)</p>
                        <label>Age:</label>
                        @Html.TextBoxFor(m => m.Member.Age, new {@class = "form-control", placeholder = "MembersList"})
                    </div>

                    <div class="form-group">
                        <p>@Html.ValidationMessageFor(m => m.Member.FavJoJo.ID)</p>
                        <label>Favorite JoJo:</label>
                        @Html.DropDownListFor(m => m.Member.FavJoJo.ID, new SelectList(Model.JoJoItems, "ID", "FullName"), "**CHOOSE YOUR FAVORITE JOJO**", new {@class = "form-control"})
                    </div>

                    <div class="form-group">
                        <p>@Html.ValidationMessageFor(m => m.Member.FavPart.PartNumber)</p>
                        <label>Favorite Part:</label>
                        @Html.DropDownListFor(m => m.Member.FavPart.PartNumber, new SelectList(Model.PartItems, "PartNumber", "PartName"), "**CHOOSE YOUR FAVORITE PART**", new {@class = "form-control"})
                    </div>
                    <button class="btn btn-primary">SAVE</button>
                    @Html.ActionLink("CANCEL", "MembersList", "Admin", null, new {@class = "btn btn-info"})
                </div>
            </div>
        </div>
    }
</div>

