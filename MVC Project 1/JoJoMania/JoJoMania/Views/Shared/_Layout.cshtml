<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JoJoMania!</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("JoJoMania", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "font-size: 30px; font-weight: bold" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("JoJo Info", "Index", "JoJo")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Choose a Part!<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Part 1: Phantom Blood", "Part1", "JoJo")</li>
                            <li>@Html.ActionLink("Part 2: Battle Tendancy", "Part2", "JoJo")</li>
                            <li>@Html.ActionLink("Part 3: Stardust Crusaders", "Part3", "JoJo")</li>
                            <li>@Html.ActionLink("Part 4: Diamond Is Unbreakable", "Part4", "JoJo")</li>
                            <li>@Html.ActionLink("Part 5: Vento Aureo", "Part5", "JoJo")</li>
                            <li>@Html.ActionLink("Part 6: Stone Ocean", "Part6", "JoJo")</li>
                            <li>@Html.ActionLink("Part 7: Steel Ball Run", "Part7", "JoJo")</li>
                            <li>@Html.ActionLink("Part 8: JoJolion", "Part8", "JoJo")</li>
                            <li>@Html.ActionLink("SURPRISE ME!", "RandomPart", "JoJo")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Admin Center", "Index", "Admin")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
       
    </div>
<footer>
    <hr />
    <center>
        <p>&copy; @DateTime.Now.Year - Jeannine James</p>
    @Html.ActionLink("????", "Surprise", "Home", null, new { @class = "btn btn-danger btn-sm" })</center>

</footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>